.tab-shell {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 60;
  pointer-events: none;
}

.tab-bar {
  pointer-events: auto;
  margin: 0 18rpx calc(8rpx + env(safe-area-inset-bottom));
  margin-bottom: calc(8rpx + constant(safe-area-inset-bottom));
  height: 104rpx;
  border-radius: 30rpx;
  background: rgba(255, 255, 255, 0.96);
  border: 1rpx solid #dce6f2;
  box-shadow: 0 14rpx 32rpx rgba(19, 37, 69, 0.16);
  backdrop-filter: blur(12px);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 8rpx;
  box-sizing: border-box;
}

.tab-item {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 2rpx;
  height: 88rpx;
  border-radius: 22rpx;
}

.tab-item:active {
  background: #f5f9ff;
}

.tab-icon-wrap {
  width: 42rpx;
  height: 42rpx;
  border-radius: 14rpx;
  background: #ecf2ff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tab-icon-wrap.active {
  background: linear-gradient(135deg, #2f6af5 0%, #3a82ff 100%);
  box-shadow: 0 8rpx 14rpx rgba(47, 106, 245, 0.24);
}

.tab-icon-text {
  font-size: 22rpx;
  font-weight: 700;
  color: #1d4ed8;
  line-height: 1;
}

.tab-icon-wrap.active .tab-icon-text {
  color: #ffffff;
}

.tab-text {
  font-size: 20rpx;
  color: #9aa8bc;
  line-height: 1.2;
}

.tab-text.active {
  color: #1d4ed8;
  font-weight: 600;
}
