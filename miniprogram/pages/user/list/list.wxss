.page {
  min-height: 100vh;
  background: linear-gradient(180deg, #f4f8ff 0%, #f6f9ff 35%);
  box-sizing: border-box;
  padding-bottom: calc(140rpx + env(safe-area-inset-bottom));
  padding-bottom: calc(140rpx + constant(safe-area-inset-bottom));
}

.summary-card {
  margin-bottom: 16rpx;
}

.summary-top {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
}

.summary-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #0f172a;
}

.summary-count {
  border-radius: 999rpx;
  padding: 8rpx 16rpx;
  font-size: 22rpx;
  font-weight: 600;
  color: #1d4ed8;
  background: #e8f1ff;
}

.summary-desc {
  margin-top: 10rpx;
  font-size: 22rpx;
  color: #6b7c93;
  line-height: 1.6;
}

.student-list {
  min-height: 420rpx;
}

.loading,
.no-more {
  text-align: center;
  padding: 24rpx 0;
  color: #9aa8bc;
  font-size: 22rpx;
}

.action-btn {
  width: 240rpx;
  height: 78rpx;
  margin: 24rpx auto 0;
  font-size: 28rpx;
}
