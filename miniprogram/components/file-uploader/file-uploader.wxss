.file-uploader {
  margin-bottom: 30rpx;
}

.uploader-label {
  display: flex;
  align-items: center;
  gap: 6rpx;
  margin-bottom: 12rpx;
}

.label-text {
  font-size: 25rpx;
  color: #334155;
  font-weight: 600;
}

.uploader-label .required {
  color: #b42318;
}

.uploader-content {
  position: relative;
}

.file-preview {
  width: 100%;
  border-radius: 14rpx;
  overflow: hidden;
  border: 2rpx solid #dce7f5;
  background: #f7fbff;
  position: relative;
}

.preview-image {
  width: 100%;
  height: 300rpx;
  display: block;
}

.preview-empty {
  width: 100%;
  height: 300rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(180deg, #f9fcff 0%, #f3f8ff 100%);
  color: #6b7c93;
  font-size: 22rpx;
}

.preview-mask {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 78rpx;
  background: linear-gradient(180deg, rgba(6, 16, 35, 0) 0%, rgba(6, 16, 35, 0.42) 100%);
  pointer-events: none;
}

.preview-actions {
  position: absolute;
  left: 10rpx;
  right: 10rpx;
  bottom: 10rpx;
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 10rpx;
}

.btn-reupload,
.btn-delete {
  margin: 0;
  border-radius: 12rpx;
  border: none;
  font-size: 22rpx;
  line-height: 52rpx;
  height: 52rpx;
  padding: 0;
}

.btn-reupload::after,
.btn-delete::after {
  border: none;
}

.btn-reupload {
  background: rgba(255, 255, 255, 0.95);
  color: #1d4ed8;
}

.btn-delete {
  background: rgba(255, 238, 238, 0.95);
  color: #b42318;
}

.upload-btn {
  width: 100%;
  height: 220rpx;
  border: 2rpx dashed #c5d5e8;
  border-radius: 14rpx;
  background: linear-gradient(180deg, #f9fcff 0%, #f3f8ff 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.tap-feedback {
  transition: transform 0.15s ease, opacity 0.15s ease;
}

.tap-feedback:active {
  transform: scale(0.99);
  opacity: 0.92;
}

.upload-btn:active {
  border-color: #3a82ff;
}

.upload-icon {
  width: 68rpx;
  height: 68rpx;
  border-radius: 50%;
  border: 2rpx solid #c8d7ea;
  position: relative;
}

.icon-plus-h,
.icon-plus-v {
  position: absolute;
  background: #5e7497;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  border-radius: 999rpx;
}

.icon-plus-h {
  width: 28rpx;
  height: 4rpx;
}

.icon-plus-v {
  width: 4rpx;
  height: 28rpx;
}

.upload-text {
  margin-top: 14rpx;
  font-size: 25rpx;
  color: #334155;
  font-weight: 600;
}

.upload-hint {
  margin-top: 6rpx;
  font-size: 20rpx;
  color: #9aa8bc;
}

.upload-progress {
  margin-top: 14rpx;
}

.progress-text {
  margin-top: 6rpx;
  display: block;
  text-align: center;
  font-size: 20rpx;
  color: #6b7c93;
}

.error-message {
  margin-top: 8rpx;
  color: #b42318;
  font-size: 20rpx;
}

.file-uploader.compact {
  margin-bottom: 0;
}

.file-uploader.compact .uploader-label {
  min-height: 54rpx;
  margin-bottom: 10rpx;
}

.file-uploader.compact .label-text {
  font-size: 22rpx;
  line-height: 1.35;
}

.file-uploader.compact .upload-btn {
  height: 168rpx;
}

.file-uploader.compact .upload-icon {
  width: 48rpx;
  height: 48rpx;
}

.file-uploader.compact .icon-plus-h {
  width: 18rpx;
}

.file-uploader.compact .icon-plus-v {
  height: 18rpx;
}

.file-uploader.compact .upload-text {
  margin-top: 8rpx;
  font-size: 22rpx;
}

.file-uploader.compact .upload-hint {
  display: none;
}

.file-uploader.compact .preview-image {
  height: 168rpx;
}

.file-uploader.compact .preview-empty {
  height: 168rpx;
  font-size: 20rpx;
}

.file-uploader.compact .preview-mask {
  height: 56rpx;
}

.file-uploader.compact .preview-actions {
  left: 8rpx;
  right: 8rpx;
  bottom: 8rpx;
  gap: 8rpx;
}

.file-uploader.compact .btn-reupload,
.file-uploader.compact .btn-delete {
  font-size: 20rpx;
  line-height: 44rpx;
  height: 44rpx;
}
