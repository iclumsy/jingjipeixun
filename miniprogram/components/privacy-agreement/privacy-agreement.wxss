.privacy-mask {
  position: fixed;
  inset: 0;
  background: rgba(10, 15, 30, 0.55);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx;
  box-sizing: border-box;
}

.privacy-dialog {
  width: 100%;
  max-width: 680rpx;
  max-height: 82vh;
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 14rpx 32rpx rgba(19, 37, 69, 0.16);
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.dialog-header {
  padding: 30rpx 28rpx 24rpx;
  border-bottom: 1rpx solid #e9eff7;
}

.dialog-title {
  display: block;
  text-align: center;
  font-size: 34rpx;
  font-weight: 700;
  color: #0f172a;
}

.dialog-content {
  flex: 1;
  padding: 24rpx 28rpx;
  box-sizing: border-box;
}

.content-text {
  font-size: 26rpx;
  line-height: 1.8;
  color: #334155;
  margin-bottom: 20rpx;
}

.content-text.highlight {
  margin-top: 26rpx;
  margin-bottom: 0;
  text-align: center;
  color: #1d4ed8;
  font-weight: 600;
}

.link {
  color: #1d4ed8;
  text-decoration: underline;
}

.section-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #0f172a;
  margin: 18rpx 0 12rpx;
}

.info-list {
  margin-bottom: 14rpx;
}

.info-item {
  display: block;
  font-size: 24rpx;
  line-height: 1.75;
  color: #6b7c93;
  margin-bottom: 6rpx;
}

.dialog-footer {
  display: flex;
  align-items: center;
  gap: 14rpx;
  border-top: 1rpx solid #e9eff7;
  padding: 18rpx 20rpx calc(18rpx + env(safe-area-inset-bottom));
  padding-bottom: calc(18rpx + constant(safe-area-inset-bottom));
}

.dialog-footer .btn {
  flex: 1;
  margin: 0;
  height: 78rpx;
  font-size: 28rpx;
  border-radius: 999rpx;
  border: none;
  font-weight: 600;
}

.dialog-footer .btn::after {
  border: none;
}

.dialog-footer .btn-secondary {
  background: #edf3ff;
  color: #1d4ed8;
}

.dialog-footer .btn-primary {
  background: linear-gradient(135deg, #2f6af5 0%, #3a82ff 100%);
  color: #ffffff;
}
