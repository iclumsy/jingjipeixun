.page {
  min-height: 100vh;
  background: linear-gradient(180deg, #f4f8ff 0%, #f6f9ff 36%);
  position: relative;
}

.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 220rpx;
  border-radius: 0 0 44rpx 44rpx;
  background: linear-gradient(135deg, #2f6af5 0%, #43a6ff 100%);
}

.container {
  position: relative;
  padding: 24rpx 24rpx 170rpx;
  box-sizing: border-box;
}

.page-header {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin-bottom: 30rpx;
  color: #ffffff;
}

.brand-row {
  display: flex;
  align-items: center;
  gap: 14rpx;
  min-width: 0;
}

.brand-logo {
  width: 180rpx;
  height: 64rpx;
  display: block;
}

.page-header .title {
  font-size: 38rpx;
  font-weight: 700;
  letter-spacing: 0.5rpx;
}

.page-subtitle {
  margin-top: 8rpx;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.9);
}

.section-card {
  background: #ffffff;
  border-radius: 24rpx;
  border: 1rpx solid #dce6f2;
  box-shadow: 0 8rpx 24rpx rgba(26, 41, 67, 0.08);
  padding: 28rpx 24rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.type-selector {
  background: linear-gradient(180deg, #ffffff 0%, #f7fbff 100%);
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  padding-bottom: 14rpx;
  border-bottom: 1rpx solid #e9eff7;
}

.card-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #0f172a;
}

.form-item {
  margin-bottom: 24rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-inline {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.inline-label {
  flex: 0 0 150rpx;
}

.inline-control {
  flex: 1;
  min-width: 0;
}

.label {
  font-size: 26rpx;
  color: #334155;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.form-inline .label {
  margin-bottom: 0;
}

.label.required::before {
  content: "*";
  color: #b42318;
  margin-right: 4rpx;
}

.input {
  width: 100%;
  height: 78rpx;
  padding: 0 20rpx;
  border: 2rpx solid #dce6f2;
  border-radius: 14rpx;
  font-size: 28rpx;
  color: #0f172a;
  background: #f8fbff;
  box-sizing: border-box;
}

.input:focus {
  border-color: #3a82ff;
  background: #ffffff;
  box-shadow: 0 0 0 4rpx rgba(58, 130, 255, 0.12);
}

.field-error {
  margin-top: 8rpx;
  font-size: 22rpx;
  color: #b42318;
}

.type-options {
  display: flex;
  gap: 12rpx;
}

.type-option {
  flex: 1;
  height: 76rpx;
  border-radius: 14rpx;
  border: 2rpx solid #dce6f2;
  background: #f9fcff;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.type-name {
  font-size: 26rpx;
  color: #334155;
  font-weight: 600;
}

.type-option.active {
  border-color: transparent;
  background: linear-gradient(135deg, #2f6af5 0%, #3a82ff 100%);
  box-shadow: 0 10rpx 20rpx rgba(47, 106, 245, 0.22);
}

.type-option.active .type-name {
  color: #ffffff;
}

.gender-selector {
  display: flex;
  gap: 12rpx;
}

.gender-option {
  flex: 1;
  height: 76rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 14rpx;
  border: 2rpx solid #dce6f2;
  background: #f8fbff;
  font-size: 28rpx;
  color: #334155;
  box-sizing: border-box;
}

.gender-option.active {
  border-color: transparent;
  background: linear-gradient(135deg, #2f6af5 0%, #3a82ff 100%);
  color: #ffffff;
  font-weight: 600;
}

.picker-input {
  height: 78rpx;
  padding: 0 20rpx;
  border-radius: 14rpx;
  border: 2rpx solid #dce6f2;
  background: #f8fbff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.picker-input .placeholder {
  color: #9aa8bc;
}

.picker-input .arrow {
  font-size: 34rpx;
  color: #97a7bd;
  line-height: 1;
}

.attachments-tip {
  margin: -8rpx 0 18rpx;
  font-size: 22rpx;
  color: #6b7c93;
  line-height: 1.5;
}

.attachments-grid {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 14rpx;
}

.attachment-item {
  min-width: 0;
  border-radius: 14rpx;
  border: 2rpx solid #e4edf8;
  background: #fbfdff;
  padding: 12rpx;
  box-sizing: border-box;
}

.submit-bar {
  display: flex;
  justify-content: center;
  padding: 34rpx 0 18rpx;
}

.submit-btn {
  width: 320rpx;
  height: 84rpx;
  border-radius: 999rpx;
  border: none;
  background: linear-gradient(135deg, #2f6af5 0%, #3a82ff 100%);
  color: #ffffff;
  font-size: 30rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 12rpx 24rpx rgba(47, 106, 245, 0.28);
  padding: 0;
}

.submit-btn::after {
  border: none;
}

.submit-btn:active {
  transform: scale(0.98);
}
