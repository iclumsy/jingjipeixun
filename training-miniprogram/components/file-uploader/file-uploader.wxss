/* components/file-uploader/file-uploader.wxss */
.file-uploader {
  margin-bottom: 32rpx;
}

.uploader-label {
  font-size: 28rpx;
  color: var(--text-primary);
  margin-bottom: 16rpx;
  font-weight: 500;
}

.uploader-label .required {
  color: var(--danger-color);
  margin-left: 8rpx;
}

.uploader-content {
  position: relative;
}

.file-preview {
  width: 100%;
  border-radius: var(--radius-md);
  overflow: hidden;
  background-color: var(--bg-gray);
}

.preview-image {
  width: 100%;
  height: 400rpx;
  display: block;
}

.preview-actions {
  display: flex;
  gap: 16rpx;
  padding: 16rpx;
  background-color: rgba(0, 0, 0, 0.05);
}

.btn-reupload,
.btn-delete {
  flex: 1;
  font-size: 24rpx;
  padding: 16rpx;
}

.btn-delete {
  background-color: var(--danger-color);
  color: white;
}

.upload-btn {
  width: 100%;
  height: 300rpx;
  border: 2rpx dashed var(--border-color);
  border-radius: var(--radius-md);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: var(--bg-gray);
  transition: all 0.3s;
}

.upload-btn:active {
  background-color: #f3f4f6;
  border-color: var(--primary-color);
}

.upload-icon {
  width: 86rpx;
  height: 86rpx;
  border: 2rpx dashed #c2cad8;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #5f6b7a;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.upload-text {
  font-size: 28rpx;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.upload-hint {
  font-size: 24rpx;
  color: var(--text-light);
}

.upload-progress {
  margin-top: 16rpx;
}

.progress-text {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-top: 8rpx;
  display: block;
  text-align: center;
}

.error-message {
  color: var(--danger-color);
  font-size: 24rpx;
  margin-top: 8rpx;
}

/* 紧凑模式：用于表单 3 列展示 */
.file-uploader.compact {
  margin-bottom: 0;
}

.file-uploader.compact .uploader-label {
  font-size: 22rpx;
  margin-bottom: 10rpx;
  min-height: 60rpx;
  line-height: 30rpx;
}

.file-uploader.compact .upload-btn {
  height: 170rpx;
}

.file-uploader.compact .upload-icon {
  width: 52rpx;
  height: 52rpx;
  font-size: 18rpx;
  margin-bottom: 6rpx;
}

.file-uploader.compact .upload-text {
  font-size: 22rpx;
  margin-bottom: 4rpx;
}

.file-uploader.compact .upload-hint {
  display: none;
}

.file-uploader.compact .preview-image {
  height: 170rpx;
}

.file-uploader.compact .preview-actions {
  gap: 8rpx;
  padding: 8rpx;
}

.file-uploader.compact .btn-reupload,
.file-uploader.compact .btn-delete {
  font-size: 20rpx;
  line-height: 1.2;
  padding: 8rpx 0;
}

.file-uploader.compact .progress-text {
  font-size: 20rpx;
}

.file-uploader.compact .error-message {
  font-size: 20rpx;
}
