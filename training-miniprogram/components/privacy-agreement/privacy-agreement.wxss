/* components/privacy-agreement/privacy-agreement.wxss */
.privacy-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.privacy-dialog {
  width: 640rpx;
  max-height: 80vh;
  background-color: white;
  border-radius: var(--radius-lg);
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.dialog-header {
  padding: 32rpx;
  border-bottom: 2rpx solid var(--border-color);
}

.dialog-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
  text-align: center;
  display: block;
}

.dialog-content {
  flex: 1;
  padding: 32rpx;
  overflow-y: auto;
}

.content-text {
  font-size: 28rpx;
  line-height: 1.8;
  color: var(--text-secondary);
  margin-bottom: 24rpx;
}

.content-text.highlight {
  color: var(--danger-color);
  font-weight: 500;
  text-align: center;
  margin-top: 32rpx;
}

.link {
  color: var(--primary-color);
  text-decoration: underline;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin: 24rpx 0 16rpx 0;
}

.info-list {
  margin-bottom: 16rpx;
}

.info-item {
  font-size: 28rpx;
  line-height: 1.8;
  color: var(--text-secondary);
  display: block;
  margin-bottom: 8rpx;
}

.dialog-footer {
  padding: 24rpx 32rpx;
  border-top: 2rpx solid var(--border-color);
  display: flex;
  gap: 24rpx;
}

.dialog-footer .btn {
  flex: 1;
  margin: 0;
}
