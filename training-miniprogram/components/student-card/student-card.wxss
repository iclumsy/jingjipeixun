/* components/student-card/student-card.wxss */
.student-card {
  background-color: var(--bg-white);
  border-radius: var(--radius-lg);
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: var(--shadow-sm);
  transition: all 0.3s;
}

.student-card:active {
  background-color: var(--bg-gray);
  transform: scale(0.98);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid var(--border-color);
}

.student-name {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.status-badge {
  padding: 8rpx 16rpx;
  border-radius: var(--radius-sm);
  font-size: 24rpx;
  font-weight: 500;
}

.badge-unreviewed {
  background-color: #fef3c7;
  color: #92400e;
}

.badge-reviewed {
  background-color: #d1fae5;
  color: #065f46;
}

.badge-rejected {
  background-color: #fee2e2;
  color: #991b1b;
}

.card-body {
  margin-bottom: 24rpx;
}

.info-row {
  display: flex;
  margin-bottom: 16rpx;
  font-size: 28rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-label {
  color: var(--text-secondary);
  min-width: 160rpx;
}

.info-value {
  color: var(--text-primary);
  flex: 1;
  word-break: break-all;
}

.card-footer {
  padding-top: 16rpx;
  border-top: 2rpx solid var(--border-color);
}

.time-text {
  font-size: 24rpx;
  color: var(--text-light);
}
