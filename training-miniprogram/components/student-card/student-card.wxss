/* components/student-card/student-card.wxss */
.student-card {
  background: linear-gradient(180deg, #ffffff 0%, #fafbfd 100%);
  border-radius: 14rpx;
  padding: 20rpx 18rpx;
  margin-bottom: 14rpx;
  box-shadow: 0 4rpx 14rpx rgba(30, 41, 59, 0.06);
  border: 1rpx solid #e8edf4;
  transition: transform 0.2s;
}

.student-card:active {
  transform: scale(0.99);
}

.card-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.name-wrap {
  min-width: 0;
}

.time-mini {
  font-size: 20rpx;
  color: #94a3b8;
  margin-top: 4rpx;
}

.student-name {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-primary);
  line-height: 1.2;
}

.status-badge {
  padding: 4rpx 14rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.badge-unreviewed {
  background-color: #fff5db;
  color: #a35b00;
}

.badge-reviewed {
  background-color: #e6f8ed;
  color: #1a7f42;
}

.badge-rejected {
  background-color: #feeceb;
  color: #bc2a25;
}

.meta-chips {
  display: flex;
  gap: 8rpx;
  margin-bottom: 12rpx;
}

.chip {
  max-width: 50%;
  padding: 4rpx 10rpx;
  border-radius: 8rpx;
  background: #eef2ff;
  color: #4258a9;
  font-size: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.info-list {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.info-line {
  display: flex;
  align-items: center;
  font-size: 23rpx;
  line-height: 1.4;
  min-width: 0;
}

.info-label {
  color: #64748b;
  width: 72rpx;
  flex: 0 0 72rpx;
}

.info-value {
  color: #1f2937;
  flex: 1;
  min-width: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-break: break-all;
}
