.page {
  min-height: 100vh;
  background: linear-gradient(180deg, #f4f8ff 0%, #f6f9ff 35%);
}

.header {
  margin-bottom: 14rpx;
}

.header-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #0f172a;
}

.header-desc {
  margin-top: 8rpx;
  font-size: 22rpx;
  color: #6b7c93;
}

.filter-section {
  margin-bottom: 14rpx;
}

.section-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #334155;
  margin-bottom: 18rpx;
}

.picker-value {
  height: 74rpx;
  padding: 0 18rpx;
  border: 2rpx solid #dce6f2;
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #334155;
  background: #f7fbff;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

.info-section {
  margin-bottom: 16rpx;
}

.info-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.info-label {
  font-size: 24rpx;
  color: #6b7c93;
}

.info-value {
  font-size: 32rpx;
  font-weight: 700;
  color: #1d4ed8;
}

.info-hint {
  margin-top: 8rpx;
  font-size: 21rpx;
  color: #9aa8bc;
}

.actions {
  padding: 6rpx 0 24rpx;
}

.actions .btn {
  width: 100%;
  height: 80rpx;
  font-size: 28rpx;
}
