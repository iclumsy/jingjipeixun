.page {
  min-height: 100vh;
  background: linear-gradient(180deg, #f4f8ff 0%, #f6f9ff 35%);
  box-sizing: border-box;
  padding-bottom: 220rpx;
}

.header {
  margin-bottom: 14rpx;
}

.header-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #0f172a;
}

.header-desc {
  margin-top: 8rpx;
  font-size: 22rpx;
  color: #6b7c93;
}

.filter-section {
  margin-bottom: 14rpx;
}

.section-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #334155;
  margin-bottom: 14rpx;
}

.picker-value {
  padding: 14rpx 18rpx;
  border: 2rpx solid #dce6f2;
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #334155;
  background: #f7fbff;
}

.student-list {
  border-radius: 16rpx;
  overflow: hidden;
  border: 1rpx solid #dce6f2;
}

.list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 18rpx;
  background: #f7fbff;
  border-bottom: 1rpx solid #e9eff7;
}

.list-header label {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #334155;
}

.list-header checkbox {
  margin-right: 12rpx;
}

.selected-count {
  font-size: 22rpx;
  color: #6b7c93;
}

.student-item {
  display: flex;
  align-items: center;
  padding: 18rpx;
  background: #ffffff;
  border-bottom: 1rpx solid #e9eff7;
  gap: 12rpx;
}

.student-item:last-child {
  border-bottom: none;
}

.student-info {
  flex: 1;
  min-width: 0;
}

.student-name {
  font-size: 26rpx;
  font-weight: 600;
  color: #0f172a;
}

.student-detail {
  margin-top: 6rpx;
  font-size: 21rpx;
  color: #6b7c93;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.status-badge {
  border-radius: 999rpx;
  font-size: 20rpx;
  font-weight: 600;
  padding: 4rpx 12rpx;
}

.badge-unreviewed {
  background: #fff6df;
  color: #9a5600;
}

.badge-reviewed {
  background: #eaf9ef;
  color: #15803d;
}

.badge-rejected {
  background: #ffeceb;
  color: #b42318;
}

.actions {
  position: fixed;
  left: 18rpx;
  right: 18rpx;
  bottom: calc(10rpx + env(safe-area-inset-bottom));
  bottom: calc(10rpx + constant(safe-area-inset-bottom));
  z-index: 30;
  border-radius: 18rpx;
  background: rgba(255, 255, 255, 0.98);
  border: 1rpx solid #dce6f2;
  box-shadow: 0 14rpx 32rpx rgba(19, 37, 69, 0.16);
  padding: 12rpx;
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 10rpx;
  box-sizing: border-box;
}

.actions .btn {
  height: 70rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
}
