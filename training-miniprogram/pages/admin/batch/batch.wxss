/* pages/admin/batch/batch.wxss */
.header {
  margin-bottom: 24rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.header-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.filter-section {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.picker-value {
  padding: 16rpx 24rpx;
  border: 2rpx solid var(--border-color);
  border-radius: var(--radius-md);
  font-size: 28rpx;
  background-color: var(--bg-white);
}

.list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  background-color: var(--bg-white);
  border-bottom: 2rpx solid var(--border-color);
}

.list-header label {
  display: flex;
  align-items: center;
  font-size: 28rpx;
}

.list-header checkbox {
  margin-right: 16rpx;
}

.selected-count {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.student-item {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  background-color: var(--bg-white);
  border-bottom: 2rpx solid var(--border-color);
}

.student-item checkbox {
  margin-right: 24rpx;
}

.student-info {
  flex: 1;
}

.student-name {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.student-detail {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  background-color: white;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.1);
  display: flex;
  gap: 24rpx;
}

.actions .btn {
  flex: 1;
  margin: 0;
}

.container {
  padding-bottom: 160rpx;
}
