.page {
  padding: 24rpx;
  min-height: 100vh;
  background: linear-gradient(180deg, #f4f7fb 0%, #ffffff 35%);
}

.filter-card {
  margin-bottom: 20rpx;
}

.filter-group {
  margin-bottom: 14rpx;
}

.filter-group:last-child {
  margin-bottom: 0;
}

.filter-inline {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
}

.group-title {
  font-size: 26rpx;
  color: var(--text-primary);
  font-weight: 600;
  line-height: 56rpx;
  flex: 0 0 108rpx;
}

.chip-list {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  flex: 1;
  min-width: 0;
}

.filter-chip {
  font-size: 22rpx;
  color: var(--text-secondary);
  border: 2rpx solid #d8deea;
  background: #f7f9fc;
  border-radius: 24rpx;
  padding: 8rpx 18rpx;
}

.filter-chip.active {
  color: #ffffff;
  border-color: #3558d8;
  background: linear-gradient(135deg, #3558d8 0%, #4d6ef2 100%);
}

.picker-wrap {
  flex: 1;
}

.picker-value {
  height: 56rpx;
  border-radius: 12rpx;
  border: 2rpx solid #d8deea;
  background: #f7f9fc;
  padding: 0 16rpx;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: var(--text-primary);
}

.record-list {
  padding-bottom: 40rpx;
}

.record-card {
  background: linear-gradient(180deg, #ffffff 0%, #fafbfd 100%);
  border-radius: 14rpx;
  padding: 20rpx 18rpx;
  margin-bottom: 14rpx;
  box-shadow: 0 4rpx 14rpx rgba(30, 41, 59, 0.06);
  border: 1rpx solid #e8edf4;
}

.record-card:active {
  transform: scale(0.99);
}

.card-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.name-wrap {
  min-width: 0;
}

.time-mini {
  font-size: 20rpx;
  color: #94a3b8;
  margin-top: 4rpx;
}

.student-name {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-primary);
  line-height: 1.2;
}

.status-badge {
  padding: 4rpx 14rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.badge-unreviewed {
  background-color: #fff5db;
  color: #a35b00;
}

.badge-reviewed {
  background-color: #e6f8ed;
  color: #1a7f42;
}

.badge-rejected {
  background-color: #feeceb;
  color: #bc2a25;
}

.meta-chips {
  display: flex;
  gap: 8rpx;
  margin-bottom: 12rpx;
}

.meta-chip {
  max-width: 50%;
  padding: 4rpx 10rpx;
  border-radius: 8rpx;
  background: #eef2ff;
  color: #4258a9;
  font-size: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.info-list {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.info-line {
  display: flex;
  align-items: center;
  font-size: 23rpx;
  line-height: 1.4;
  min-width: 0;
}

.info-label {
  color: #64748b;
  width: 72rpx;
  flex: 0 0 72rpx;
}

.info-value {
  color: #1f2937;
  flex: 1;
  min-width: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-break: break-all;
}

.record-actions {
  margin-top: 16rpx;
  display: grid;
  grid-template-columns: repeat(3, minmax(0, 1fr));
  gap: 12rpx;
}

.action-btn {
  margin: 0;
  border-radius: 10rpx;
  font-size: 22rpx;
  line-height: 56rpx;
  height: 56rpx;
  padding: 0;
  border: none;
}

.action-btn::after {
  border: none;
}

.btn-delete {
  color: #c12b22;
  background: #ffefee;
}

.btn-approve {
  color: #176d36;
  background: #e6f8ed;
}

.btn-reject {
  color: #b32924;
  background: #feeceb;
}

.action-btn.disabled {
  opacity: 0.45;
}

.loading,
.no-more {
  text-align: center;
  color: var(--text-light);
  font-size: 24rpx;
  padding: 20rpx 0;
}

.empty {
  text-align: center;
  padding: 120rpx 0;
}

.empty-text {
  color: var(--text-light);
  font-size: 26rpx;
}
