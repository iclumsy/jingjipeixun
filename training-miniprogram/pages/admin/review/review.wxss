.page {
  padding: 24rpx;
}

.filter-card {
  margin-bottom: 20rpx;
}

.filter-group {
  margin-bottom: 20rpx;
}

.filter-group:last-child {
  margin-bottom: 0;
}

.group-title {
  font-size: 26rpx;
  color: var(--text-primary);
  font-weight: 600;
  margin-bottom: 12rpx;
}

.chip-list {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.chip {
  font-size: 24rpx;
  color: var(--text-secondary);
  border: 2rpx solid #d8deea;
  background: #f7f9fc;
  border-radius: 26rpx;
  padding: 10rpx 20rpx;
}

.chip.active {
  color: #ffffff;
  border-color: #3558d8;
  background: linear-gradient(135deg, #3558d8 0%, #4d6ef2 100%);
}

.picker-value {
  height: 72rpx;
  border-radius: 12rpx;
  border: 2rpx solid #d8deea;
  background: #f7f9fc;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: var(--text-primary);
}

.record-list {
  padding-bottom: 40rpx;
}

.record-card {
  margin-bottom: 16rpx;
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.submitter {
  font-size: 30rpx;
  color: var(--text-primary);
  font-weight: 600;
}

.status-tag {
  border-radius: 24rpx;
  padding: 6rpx 16rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.status-unreviewed {
  background: #fff5db;
  color: #a35b00;
}

.status-reviewed {
  background: #e6f8ed;
  color: #1a7f42;
}

.status-rejected {
  background: #feeceb;
  color: #bc2a25;
}

.record-meta {
  font-size: 24rpx;
  color: var(--text-secondary);
  line-height: 1.8;
}

.record-actions {
  margin-top: 16rpx;
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 12rpx;
}

.action-btn {
  margin: 0;
  border-radius: 10rpx;
  font-size: 24rpx;
  line-height: 58rpx;
  height: 58rpx;
  padding: 0;
  border: none;
}

.action-btn::after {
  border: none;
}

.btn-sync {
  color: #2c4dc4;
  background: #e9efff;
}

.btn-delete {
  color: #c12b22;
  background: #ffefee;
}

.btn-approve {
  color: #176d36;
  background: #e6f8ed;
}

.btn-reject {
  color: #b32924;
  background: #feeceb;
}

.action-btn.disabled {
  opacity: 0.45;
}

.loading,
.no-more {
  text-align: center;
  color: var(--text-light);
  font-size: 24rpx;
  padding: 20rpx 0;
}

.empty {
  text-align: center;
  padding: 120rpx 0;
}

.empty-text {
  color: var(--text-light);
  font-size: 26rpx;
}
