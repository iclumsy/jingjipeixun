.page {
  min-height: 100vh;
  background: linear-gradient(180deg, #f4f8ff 0%, #f6f9ff 35%);
}

.container {
  padding: 24rpx;
  box-sizing: border-box;
  padding-bottom: calc(150rpx + env(safe-area-inset-bottom));
  padding-bottom: calc(150rpx + constant(safe-area-inset-bottom));
}

.top-card {
  margin-bottom: 14rpx;
}

.top-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 10rpx;
}

.top-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #0f172a;
}

.top-count {
  border-radius: 999rpx;
  background: #e8f1ff;
  color: #1d4ed8;
  font-size: 22rpx;
  font-weight: 600;
  padding: 8rpx 14rpx;
}

.top-desc {
  margin-top: 10rpx;
  font-size: 22rpx;
  color: #6b7c93;
  line-height: 1.6;
}

.filter-card {
  margin-bottom: 16rpx;
}

.filter-row {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.filter-row:last-child {
  margin-bottom: 0;
}

.filter-title {
  width: 76rpx;
  flex: 0 0 76rpx;
  line-height: 54rpx;
  font-size: 24rpx;
  color: #334155;
  font-weight: 600;
}

.chip-list {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.filter-chip {
  border-radius: 999rpx;
  border: 2rpx solid #d0def0;
  background: #f7fbff;
  color: #6b7c93;
  padding: 8rpx 16rpx;
  font-size: 22rpx;
  line-height: 1;
}

.filter-chip.active {
  border-color: transparent;
  background: linear-gradient(135deg, #2f6af5 0%, #3a82ff 100%);
  color: #ffffff;
}

.company-picker {
  flex: 1;
  min-width: 0;
}

.picker-value {
  width: 100%;
  height: 54rpx;
  border-radius: 12rpx;
  border: 2rpx solid #d0def0;
  background: #f7fbff;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  padding: 0 14rpx;
  font-size: 23rpx;
  color: #334155;
}

.record-list {
  min-height: 420rpx;
}

.record-card {
  background: linear-gradient(180deg, #ffffff 0%, #fbfdff 100%);
  border: 1rpx solid #dce6f2;
  border-radius: 18rpx;
  box-shadow: 0 8rpx 24rpx rgba(26, 41, 67, 0.08);
  padding: 18rpx;
  margin-bottom: 14rpx;
  box-sizing: border-box;
}

.card-head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 10rpx;
}

.name-wrap {
  min-width: 0;
  flex: 1;
}

.student-name {
  font-size: 30rpx;
  font-weight: 700;
  color: #0f172a;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.time-text {
  margin-top: 4rpx;
  font-size: 20rpx;
  color: #9aa8bc;
}

.status-badge {
  border-radius: 999rpx;
  padding: 5rpx 14rpx;
  font-size: 20rpx;
  font-weight: 600;
}

.badge-unreviewed {
  background: #fff6df;
  color: #9a5600;
}

.badge-reviewed {
  background: #eaf9ef;
  color: #15803d;
}

.badge-rejected {
  background: #ffeceb;
  color: #b42318;
}

.meta-row {
  margin-top: 10rpx;
  display: flex;
  gap: 8rpx;
}

.meta-chip {
  max-width: 50%;
  border-radius: 10rpx;
  border: 1rpx solid #dfe9f6;
  background: #f2f7ff;
  color: #2f5fc8;
  font-size: 20rpx;
  line-height: 1;
  padding: 8rpx 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.detail-list {
  margin-top: 12rpx;
  display: flex;
  flex-direction: column;
  gap: 7rpx;
}

.detail-line {
  display: flex;
  align-items: center;
  font-size: 23rpx;
  line-height: 1.45;
}

.detail-label {
  width: 72rpx;
  flex: 0 0 72rpx;
  color: #6b7c93;
}

.detail-value {
  flex: 1;
  min-width: 0;
  color: #334155;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.record-actions {
  margin-top: 14rpx;
  display: grid;
  grid-template-columns: repeat(3, minmax(0, 1fr));
  gap: 10rpx;
}

.action-btn {
  margin: 0;
  border: none;
  border-radius: 12rpx;
  height: 58rpx;
  line-height: 58rpx;
  font-size: 22rpx;
  font-weight: 600;
  padding: 0;
}

.action-btn::after {
  border: none;
}

.btn-approve {
  background: #eaf9ef;
  color: #15803d;
}

.btn-reject {
  background: #ffeceb;
  color: #b42318;
}

.btn-delete {
  background: #fff2eb;
  color: #c2410c;
}

.action-btn.disabled {
  opacity: 0.45;
}

.loading,
.no-more {
  text-align: center;
  padding: 20rpx 0;
  color: #9aa8bc;
  font-size: 22rpx;
}
