@import "../../../styles/form-page.wxss";

.page {
  padding-bottom: 250rpx;
}

.container {
  padding-bottom: 330rpx;
}

.summary-card {
  margin-top: 4rpx;
  background: linear-gradient(180deg, #ffffff 0%, #f7fbff 100%);
}

.summary-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.summary-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #0f172a;
}

.summary-meta {
  margin-top: 6rpx;
  font-size: 23rpx;
  color: #6b7c93;
  line-height: 1.55;
}

.status-tag {
  border-radius: 999rpx;
  padding: 6rpx 16rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.status-unreviewed {
  background: #fff6df;
  color: #9a5600;
}

.status-reviewed {
  background: #eaf9ef;
  color: #15803d;
}

.status-rejected {
  background: #ffeceb;
  color: #b42318;
}

.bottom-actions {
  position: fixed;
  left: 18rpx;
  right: 18rpx;
  bottom: calc(10rpx + env(safe-area-inset-bottom));
  bottom: calc(10rpx + constant(safe-area-inset-bottom));
  z-index: 50;
  display: flex;
  grid-template-columns: repeat(3, 1fr);
  gap: 10rpx;
  align-items: center;
  padding: 12rpx;
  border-radius: 18rpx;
  border: 1rpx solid #dce6f2;
  background: rgba(255, 255, 255, 0.98);
  box-shadow: 0 14rpx 32rpx rgba(19, 37, 69, 0.16);
  box-sizing: border-box;
}

.action-btn {
  margin: 0;
  width: 100%;
  height: 72rpx;
  min-width: 0;
  border-radius: 12rpx;
  border: none;
  font-size: 22rpx;
  font-weight: 700;
  line-height: 1.2;
  padding: 0 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  box-sizing: border-box;
  white-space: nowrap;
  overflow: hidden;
}

.action-btn::after {
  border: none;
}

.btn-save {
  background: #e9efff;
  color: #1d4ed8;
}

.btn-approve {
  background: #eaf9ef;
  color: #15803d;
}

.btn-reject {
  background: #ffeceb;
  color: #b42318;
}

.action-btn.disabled {
  opacity: 0.45;
}

.readonly-hint {
  margin: 0 24rpx;
  padding: 16rpx 18rpx;
  border-radius: 12rpx;
  background: #edf4ff;
  color: #1d4ed8;
  font-size: 22rpx;
  line-height: 1.45;
}

.loading {
  text-align: center;
  padding: 120rpx 0;
  color: #9aa8bc;
  font-size: 24rpx;
}
