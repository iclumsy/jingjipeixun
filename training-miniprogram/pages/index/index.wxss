.page-entry {
  min-height: 100vh;
  background: linear-gradient(180deg, #f4f8ff 0%, #f6f9ff 45%);
}

.entry-loading {
  min-height: 70vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.loading-ring {
  width: 78rpx;
  height: 78rpx;
  border-radius: 50%;
  border: 6rpx solid #d9e7ff;
  border-top-color: #2f6af5;
  animation: spin 0.9s linear infinite;
}

.loading-title {
  margin-top: 22rpx;
  font-size: 30rpx;
  font-weight: 700;
  color: #0f172a;
}

.loading-text {
  margin-top: 10rpx;
  font-size: 23rpx;
  color: #6b7c93;
}

.entry-error {
  min-height: 70vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 0 48rpx;
}

.error-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #0f172a;
}

.error-text {
  margin-top: 16rpx;
  font-size: 24rpx;
  line-height: 1.6;
  color: #6b7c93;
}

.retry-btn {
  margin-top: 28rpx;
  width: 320rpx;
  height: 84rpx;
  line-height: 84rpx;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #2f6af5 0%, #4b8dff 100%);
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 600;
}

.retry-btn::after {
  border: none;
}

@keyframes spin {
  from {
    transform: rotate(0deg);
  }

  to {
    transform: rotate(360deg);
  }
}
