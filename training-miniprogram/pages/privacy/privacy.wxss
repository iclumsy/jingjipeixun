/* pages/privacy/privacy.wxss */
.privacy-content {
  padding: 32rpx;
  padding-bottom: 100rpx;
}

.title {
  font-size: 48rpx;
  font-weight: 600;
  color: var(--text-primary);
  text-align: center;
  margin-bottom: 32rpx;
}

.update-time,
.effective-time {
  font-size: 24rpx;
  color: var(--text-secondary);
  text-align: center;
  margin-bottom: 8rpx;
}

.section {
  margin-bottom: 48rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 24rpx;
  padding-left: 16rpx;
  border-left: 6rpx solid var(--primary-color);
}

.subsection {
  margin-bottom: 32rpx;
}

.subsection-title {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.section-text {
  font-size: 28rpx;
  line-height: 1.8;
  color: var(--text-secondary);
  display: block;
  margin-bottom: 16rpx;
}

.list {
  margin: 16rpx 0;
}

.list-item {
  font-size: 28rpx;
  line-height: 1.8;
  color: var(--text-secondary);
  display: block;
  margin-bottom: 12rpx;
  padding-left: 16rpx;
}

.contact-info {
  background-color: var(--bg-gray);
  padding: 24rpx;
  border-radius: var(--radius-md);
  margin: 16rpx 0;
}

.contact-item {
  font-size: 28rpx;
  line-height: 1.8;
  color: var(--text-primary);
  display: block;
  margin-bottom: 8rpx;
}

.contact-item:last-child {
  margin-bottom: 0;
}
