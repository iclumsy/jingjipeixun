/* pages/user/edit/edit.wxss */
.page {
  min-height: 100vh;
  background: linear-gradient(180deg, #f5f7fa 0%, #ffffff 100%);
  position: relative;
}

.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 220rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 0 0 40rpx 40rpx;
}

.container {
  position: relative;
  padding: 24rpx 24rpx 140rpx;
}

/* 页面标题 */
.page-header {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin-bottom: 32rpx;
  color: white;
}

.brand-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.brand-logo {
  width: 180rpx;
  height: 64rpx;
  display: block;
}

.page-header .title {
  font-size: 38rpx;
  font-weight: 700;
  letter-spacing: 1rpx;
}

/* 卡片样式 */
.section-card {
  background: white;
  border-radius: 20rpx;
  padding: 28rpx 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 28rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.card-header .card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

/* 培训类型选择器 */
.type-selector {
  background: linear-gradient(135deg, #ffffff 0%, #f8f9ff 100%);
}

.type-options {
  display: flex;
  gap: 12rpx;
}

.type-option {
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding: 16rpx 12rpx;
  background: white;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.type-option.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-color: #667eea;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.2);
}

.type-name {
  font-size: 26rpx;
  font-weight: 500;
  color: #666;
}

.type-option.active .type-name {
  color: white;
}

/* 表单项 */
.form-item {
  margin-bottom: 24rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-inline {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.form-inline .label {
  margin-bottom: 0;
}

.inline-label {
  flex: 0 0 148rpx;
}

.inline-control {
  flex: 1;
  min-width: 0;
}

.label.required::before {
  content: '*';
  color: #ff4d4f;
  margin-right: 4rpx;
}

.input {
  width: 100%;
  height: 76rpx;
  padding: 0 20rpx;
  background: #f8f9fa;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  transition: all 0.3s;
}

.input:focus {
  background: white;
  border-color: #667eea;
  box-shadow: 0 0 0 3rpx rgba(102, 126, 234, 0.1);
}

.field-error {
  margin-top: 8rpx;
  font-size: 22rpx;
  color: #ef4444;
}

/* 性别选择器 */
.gender-selector {
  display: flex;
  gap: 16rpx;
}

.form-inline .gender-selector {
  gap: 12rpx;
}

.gender-option {
  flex: 1;
  height: 76rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s;
}

.gender-option.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-color: #667eea;
  color: white;
  font-weight: 500;
}

/* 选择器输入框 */
.picker-input {
  height: 76rpx;
  padding: 0 20rpx;
  background: #f8f9fa;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  color: #333;
}

.picker-input .placeholder {
  color: #999;
}

.picker-input .arrow {
  font-size: 36rpx;
  color: #999;
  font-weight: 300;
}

/* 附件区域 */
.attachments-tip {
  margin: -8rpx 0 20rpx;
  font-size: 22rpx;
  color: #8a8f99;
  line-height: 1.5;
}

.attachments-grid {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 14rpx;
}

.attachment-item {
  min-width: 0;
  border: 2rpx solid #edf1f7;
  border-radius: 14rpx;
  padding: 12rpx;
  background: linear-gradient(180deg, #ffffff 0%, #fafcff 100%);
}

/* 提交按钮 - 底部居中 */
.submit-bar {
  display: flex;
  justify-content: center;
  padding: 32rpx 0 40rpx;
}

.submit-btn {
  width: 280rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: 600;
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.35);
  transition: all 0.3s;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.submit-btn::after {
  border: none;
}

.submit-btn:active {
  transform: scale(0.96);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.bottom-placeholder {
  height: 20rpx;
}
