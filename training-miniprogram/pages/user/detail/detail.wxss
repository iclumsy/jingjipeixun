.page {
  min-height: 100vh;
  background: linear-gradient(180deg, #f4f8ff 0%, #f6f9ff 35%);
  position: relative;
}

.header-bg {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  height: 220rpx;
  border-radius: 0 0 44rpx 44rpx;
  background: linear-gradient(135deg, #2f6af5 0%, #43a6ff 100%);
}

.container {
  position: relative;
  padding: 24rpx;
  box-sizing: border-box;
}

.page-header {
  margin-bottom: 22rpx;
  color: #ffffff;
}

.title {
  font-size: 38rpx;
  font-weight: 700;
  letter-spacing: 0.5rpx;
}

.subtitle {
  margin-top: 8rpx;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.9);
}

.section-card {
  background: #ffffff;
  border-radius: 24rpx;
  border: 1rpx solid #dce6f2;
  box-shadow: 0 8rpx 24rpx rgba(26, 41, 67, 0.08);
  padding: 26rpx 22rpx;
  margin-bottom: 18rpx;
}

.summary-card {
  background: linear-gradient(180deg, #ffffff 0%, #f7fbff 100%);
}

.summary-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 10rpx;
}

.summary-title {
  font-size: 31rpx;
  font-weight: 700;
  color: #0f172a;
}

.status-tag {
  border-radius: 999rpx;
  padding: 6rpx 16rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.status-unreviewed {
  background: #fff6df;
  color: #9a5600;
}

.status-reviewed {
  background: #eaf9ef;
  color: #15803d;
}

.status-rejected {
  background: #ffeceb;
  color: #b42318;
}

.summary-hint {
  margin-top: 10rpx;
  font-size: 23rpx;
  line-height: 1.55;
  color: #6b7c93;
}

.summary-meta {
  margin-top: 6rpx;
  font-size: 22rpx;
  color: #6b7c93;
}

.card-header {
  margin-bottom: 20rpx;
  padding-bottom: 12rpx;
  border-bottom: 1rpx solid #e9eff7;
}

.card-title {
  font-size: 29rpx;
  font-weight: 700;
  color: #0f172a;
}

.info-grid {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 16rpx;
}

.info-item {
  min-width: 0;
}

.info-item.full-width {
  grid-column: 1 / -1;
}

.info-label {
  display: block;
  font-size: 21rpx;
  color: #9aa8bc;
  margin-bottom: 6rpx;
}

.info-value {
  display: block;
  font-size: 26rpx;
  color: #334155;
  line-height: 1.45;
  word-break: break-all;
}

.action-card {
  background: linear-gradient(180deg, #f7fbff 0%, #ffffff 100%);
}

.action-title {
  font-size: 24rpx;
  color: #6b7c93;
}

.edit-btn {
  margin-top: 14rpx;
  width: 100%;
  height: 78rpx;
  line-height: 78rpx;
  border: none;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #2f6af5 0%, #3a82ff 100%);
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 700;
}

.edit-btn::after {
  border: none;
}

.attachments-grid {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 12rpx;
}

.attachment-item {
  border-radius: 12rpx;
  overflow: hidden;
  border: 1rpx solid #dce6f2;
  background: #f8fbff;
}

.attachment-image {
  width: 100%;
  height: 220rpx;
  display: block;
}

.attachment-label {
  display: block;
  text-align: center;
  padding: 10rpx 8rpx;
  font-size: 21rpx;
  color: #6b7c93;
}

.loading {
  text-align: center;
  padding: 150rpx 0 100rpx;
  color: #9aa8bc;
  font-size: 24rpx;
}
