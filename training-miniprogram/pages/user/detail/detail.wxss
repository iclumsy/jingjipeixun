.page {
  min-height: 100vh;
  background: linear-gradient(180deg, #f5f7fa 0%, #ffffff 100%);
  position: relative;
}

.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 220rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 0 0 40rpx 40rpx;
}

.container {
  position: relative;
  padding: 24rpx;
  box-sizing: border-box;
}

.page-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  color: #ffffff;
}

.title-wrap {
  min-width: 0;
}

.title {
  font-size: 38rpx;
  font-weight: 700;
  letter-spacing: 1rpx;
}

.subtitle {
  margin-top: 6rpx;
  font-size: 22rpx;
  opacity: 0.9;
}

.back-btn {
  margin: 0;
  width: 110rpx;
  min-width: 110rpx;
  max-width: 110rpx;
  padding: 0;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 22rpx;
  color: #3558d8;
  background: #ffffff;
  border-radius: 24rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.back-btn::after {
  border: none;
}

.section-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 28rpx 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.summary-card {
  background: linear-gradient(180deg, #ffffff 0%, #f8f9ff 100%);
}

.summary-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.summary-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2937;
}

.status-tag {
  border-radius: 20rpx;
  padding: 6rpx 16rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.status-unreviewed {
  background: #fff5db;
  color: #a35b00;
}

.status-reviewed {
  background: #e6f8ed;
  color: #1a7f42;
}

.status-rejected {
  background: #feeceb;
  color: #bc2a25;
}

.summary-hint {
  font-size: 24rpx;
  color: #52607a;
  line-height: 1.5;
  margin-bottom: 8rpx;
}

.summary-meta {
  font-size: 24rpx;
  color: #64748b;
  line-height: 1.8;
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 14rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.info-grid {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 20rpx 18rpx;
}

.info-item {
  min-width: 0;
}

.info-item.full-width {
  grid-column: 1 / -1;
}

.info-label {
  display: block;
  font-size: 22rpx;
  color: #64748b;
  margin-bottom: 8rpx;
}

.info-value {
  display: block;
  font-size: 27rpx;
  color: #1f2937;
  line-height: 1.4;
  word-break: break-all;
}

.action-card {
  padding: 24rpx;
}

.action-title {
  font-size: 24rpx;
  color: #52607a;
  margin-bottom: 16rpx;
}

.edit-btn {
  margin: 0;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border: none;
  border-radius: 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 600;
}

.edit-btn::after {
  border: none;
}

.attachments-grid {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 14rpx;
}

.attachment-item {
  border: 2rpx solid #edf1f7;
  border-radius: 14rpx;
  overflow: hidden;
  background: linear-gradient(180deg, #ffffff 0%, #fafcff 100%);
}

.attachment-image {
  width: 100%;
  height: 250rpx;
  display: block;
}

.attachment-label {
  display: block;
  padding: 12rpx;
  text-align: center;
  font-size: 22rpx;
  color: #52607a;
  background: rgba(15, 23, 42, 0.03);
}

.loading {
  text-align: center;
  padding: 200rpx 0;
  color: #94a3b8;
  font-size: 26rpx;
}
