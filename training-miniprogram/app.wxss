/** app.wxss **/
page {
  min-height: 100%;
  background: #f3f6fb;
  color: #0f172a;
  font-family: "PingFang SC", "Microsoft YaHei", "Helvetica Neue", sans-serif;
}

/* Design Tokens */
:root {
  --color-primary-700: #1d4ed8;
  --color-primary-600: #2f6af5;
  --color-primary-500: #3a82ff;
  --color-primary-100: #e8f1ff;
  --color-primary-50: #f2f7ff;

  --color-success-600: #15803d;
  --color-success-100: #eaf9ef;
  --color-warning-600: #9a5600;
  --color-warning-100: #fff6df;
  --color-danger-600: #b42318;
  --color-danger-100: #ffeceb;

  --color-bg-page: #f3f6fb;
  --color-bg-card: #ffffff;
  --color-bg-soft: #f8fbff;
  --color-bg-mask: rgba(10, 15, 30, 0.55);

  --color-text-primary: #0f172a;
  --color-text-secondary: #334155;
  --color-text-muted: #6b7c93;
  --color-text-light: #9aa8bc;

  --color-border: #dce6f2;
  --color-border-strong: #c7d6e8;
  --color-divider: #e9eff7;

  --status-unreviewed-bg: #fff6df;
  --status-unreviewed-text: #9a5600;
  --status-reviewed-bg: #eaf9ef;
  --status-reviewed-text: #15803d;
  --status-rejected-bg: #ffeceb;
  --status-rejected-text: #b42318;

  --radius-xs: 10rpx;
  --radius-sm: 14rpx;
  --radius-md: 18rpx;
  --radius-lg: 24rpx;
  --radius-pill: 999rpx;

  --shadow-card: 0 8rpx 24rpx rgba(26, 41, 67, 0.08);
  --shadow-soft: 0 4rpx 14rpx rgba(21, 36, 64, 0.05);
  --shadow-float: 0 14rpx 32rpx rgba(19, 37, 69, 0.16);

  --space-1: 8rpx;
  --space-2: 12rpx;
  --space-3: 16rpx;
  --space-4: 20rpx;
  --space-5: 24rpx;
  --space-6: 28rpx;
  --space-7: 32rpx;
  --space-8: 40rpx;

  --font-xs: 20rpx;
  --font-sm: 22rpx;
  --font-md: 24rpx;
  --font-lg: 28rpx;
  --font-xl: 32rpx;
  --font-2xl: 38rpx;
}

.container {
  padding: 24rpx;
  box-sizing: border-box;
}

.card {
  background: #ffffff;
  border: 1rpx solid #dce6f2;
  border-radius: 18rpx;
  box-shadow: 0 4rpx 14rpx rgba(21, 36, 64, 0.05);
  padding: 28rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.btn {
  margin: 0;
  border: none;
  border-radius: 999rpx;
  font-size: 24rpx;
  font-weight: 600;
  line-height: normal;
  box-sizing: border-box;
  transition: transform 0.2s ease, opacity 0.2s ease;
}

.btn::after {
  border: none;
}

.btn:active {
  transform: scale(0.98);
}

.btn[disabled] {
  opacity: 0.45;
}

.btn-primary {
  background: linear-gradient(135deg, #2f6af5 0%, #3a82ff 100%);
  color: #ffffff;
  box-shadow: 0 10rpx 22rpx rgba(47, 106, 245, 0.28);
}

.btn-secondary {
  background: #eaf1ff;
  color: #1d4ed8;
}

.btn-danger {
  background: #ffeceb;
  color: #b42318;
}

.btn-success {
  background: #eaf9ef;
  color: #15803d;
}

.form-group {
  margin-bottom: 24rpx;
}

.form-label {
  display: block;
  font-size: 24rpx;
  color: #334155;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.form-label.required::before {
  content: "*";
  margin-right: 6rpx;
  color: #b42318;
}

.form-input {
  width: 100%;
  height: 78rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  border-radius: 14rpx;
  border: 2rpx solid #dce6f2;
  background: #f8fbff;
  color: #0f172a;
  font-size: 28rpx;
}

.form-error {
  margin-top: 8rpx;
  color: #b42318;
  font-size: 22rpx;
}

.badge {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border-radius: 999rpx;
  padding: 6rpx 14rpx;
  font-size: 20rpx;
  font-weight: 600;
}

.badge-unreviewed,
.badge-warning {
  background: #fff6df;
  color: #9a5600;
}

.badge-reviewed,
.badge-success {
  background: #eaf9ef;
  color: #15803d;
}

.badge-rejected,
.badge-danger {
  background: #ffeceb;
  color: #b42318;
}

.text-primary {
  color: #0f172a;
}

.text-secondary {
  color: #334155;
}

.text-muted {
  color: #6b7c93;
}

.text-light {
  color: #9aa8bc;
}

.text-center {
  text-align: center;
}

.title-xl {
  font-size: 38rpx;
  font-weight: 700;
  line-height: 1.2;
}

.title-lg {
  font-size: 32rpx;
  font-weight: 700;
  line-height: 1.3;
}

.title-md {
  font-size: 28rpx;
  font-weight: 600;
  line-height: 1.35;
}

.desc-sm {
  font-size: 22rpx;
  color: #6b7c93;
  line-height: 1.6;
}

.state-wrap {
  min-height: 360rpx;
  padding: 84rpx 24rpx;
  box-sizing: border-box;
  text-align: center;
  color: #9aa8bc;
}

.state-title {
  font-size: 24rpx;
  color: #334155;
  margin-top: 14rpx;
}

.state-desc {
  font-size: 22rpx;
  margin-top: 8rpx;
  line-height: 1.6;
}

.state-dot {
  width: 52rpx;
  height: 52rpx;
  margin: 0 auto;
  border-radius: 50%;
  background: radial-gradient(circle at 28% 28%, #7ab5ff 0%, #2f6af5 80%);
}

.loading {
  text-align: center;
  padding: 56rpx 0;
  color: #9aa8bc;
  font-size: 22rpx;
}

.mt-8 { margin-top: 8rpx; }
.mt-16 { margin-top: 16rpx; }
.mt-24 { margin-top: 24rpx; }
.mb-8 { margin-bottom: 8rpx; }
.mb-16 { margin-bottom: 16rpx; }
.mb-24 { margin-bottom: 24rpx; }

.fade-enter {
  animation: fadeEnter 0.24s ease both;
}

.tap-feedback {
  transition: transform 0.15s ease, opacity 0.15s ease;
}

.tap-feedback:active {
  transform: scale(0.99);
  opacity: 0.92;
}

@keyframes fadeEnter {
  from {
    opacity: 0;
    transform: translateY(8rpx);
  }

  to {
    opacity: 1;
    transform: translateY(0);
  }
}
