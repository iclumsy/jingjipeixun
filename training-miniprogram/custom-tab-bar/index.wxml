<view class="tab-shell">
  <view class="tab-bar">
    <view
      wx:for="{{list}}"
      wx:key="index"
      class="tab-item"
      data-path="{{item.pagePath}}"
      data-index="{{index}}"
      bindtap="switchTab"
    >
      <view class="tab-icon-wrap {{selected === index ? 'active' : ''}}">
        <text class="tab-icon-text">{{item.iconText}}</text>
      </view>
      <view class="tab-text {{selected === index ? 'active' : ''}}">{{item.text}}</view>
    </view>
  </view>
</view>
